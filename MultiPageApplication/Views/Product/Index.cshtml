@model IEnumerable<MultiPageApplication.ApplicationServices.Dtos.ProductDtos.GetAll_Product_Dto>

@{
    ViewData["Title"] = "لیست محصولات";
}

<h2>لیست محصولات</h2>

<p>
    <a asp-action="Create" class="btn btn-success">افزودن محصول جدید</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.UnitPrice</td>
                <td>@item.Quantity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit Product</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detail Product</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete Product</a>
                </td>
            </tr>
        }
    </tbody>
</table>
